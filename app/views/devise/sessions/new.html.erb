<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>

<h2 class="text-center">Customer Log In</h2>

    <%= f.input :email, required: false, autofocus: true, placeholder: "Email Address", input_html: {class: "form-control"} %>
    <%= f.input :password, required: false, placeholder: "Password", input_html: {class: "form-control"} %>


    <%= f.button :submit, "Log in", class: "btn btn-success btn-lg" %>

<% end %>

<%= render "devise/shared/links" %>
