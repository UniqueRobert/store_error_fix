<div class="row">
<h2 class="text-center">Your Dashboard</h1>
  <div class="col-md-4">
    <h3 class="text-center">
      Products <%= link_to "New Products", new_product_path, class: "btn btn-primary bt-sm"  %>
    </h3>
    <table class="table">
        <thead>
          <tr>
            <th>Id</th>
            <th>Brand</th>
            <th>Availability</th>  
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @products.each do |product| %> 
          <tr>
            <td><%= product.id %></td>
            <td><%= link_to product.name, product_path(product) %></td>
            <td><%= product.availability %></td>
            <td><%= link_to "Edit", edit_product_path(product) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>
  <div class="col-md-4">
    <h3 class="text-center">
      Purchased Products
    </h3>
  </div>
  <div class="col-md-4">
    <h3 class="text-center">
      Sold Products
    </h3>
  </div>
</div>